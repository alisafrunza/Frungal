= render "shared/internal_navbar"

.container
  %h1 Albums
  %ul
    - @albums.each do |album|
      .col-lg-6.col-md-6.col-sm-6.col-xs-12
        .panel.panel-default
          .panel-heading
            %p= link_to album.name, admin_album_path(album)
          .panel-body
            %p= album.description
            - if album.cover.attached?
              = image_tag(album.cover, width: 600, class: "img-responsive img-thumbnail")
          .panel-footer
            = link_to(edit_admin_album_path(album), class: "btn btn-default btn-xs") do
              %span.fas.fa-pen-square{"aria-hidden" => "true"}
              Edit
            = link_to(admin_album_path(album), method: :delete, class: "btn btn-danger btn-xs pull-right", data: { confirm: "Are you sure?" }) do
              %span.glyphicon.glyphicon-trash{"aria-hidden" => "true"}
              Delete
