= render "shared/internal_navbar"

.col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-12
  .page-header
    %h1= "Edit album"

  = bootstrap_form_for @album, url: admin_album_path(@album), method: :PATCH, html: {class: 'form-horizontal'} do |f|
    = content_tag :div, class: "form-group" do
      .col-sm-7
        = f.text_field :name, class: 'form-control'
    = content_tag :div, class: "form-group" do
      .col-sm-7
        = f.text_area :description, class: 'form-control'
    = content_tag :div, class: "form-group" do
      .col-sm-7
        = f.text_area :image, class: 'form-control'
    .form-group
      .col-sm-offset-2.col-sm-2
        = f.submit "Update", class: "btn btn-success"
