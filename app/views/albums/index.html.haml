= link_to "New album", new_album_path

.container
  %h1 Albums
  %ul
    - @albums.each do |album|
      .col-lg-4.col-md-6.col-sm-6.col-xs-12
        .panel.panel-default
          .panel-heading
            %h3.panel-title= album.name
          .panel-body
            %p= album.description
            = image_tag(album.image, width: 600, class: "img-responsive img-thumbnail")
          .panel-footer
            = link_to(edit_album_path(album), class: "btn btn-default btn-xs") do
              %span.fas.fa-pen-square{"aria-hidden" => "true"}
              Edit
            = link_to(album_path(album), method: :delete, class: "btn btn-danger btn-xs pull-right") do
              %span.glyphicon.glyphicon-trash{"aria-hidden" => "true"}
              Delete
