%nav{"aria-label" => "breadcrumb"}
  %ol.breadcrumb
    %li.breadcrumb-item= link_to "Home", landing_pages_path
    %li.breadcrumb-item.active{"aria-current" => "page"} Albums

.container
  - @albums.each do |album|
    .col-lg-6.col-md-6.col-sm-6.col-xs-12
      .panel.panel-default
        .panel-heading
          = link_to album_photos_path(album) do
            = image_tag(album.cover, width: 600, class: "img-responsive img-thumbnail")

